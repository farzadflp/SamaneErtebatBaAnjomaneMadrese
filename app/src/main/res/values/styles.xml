<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:fontFamily">@font/fonts</item>
        <item name="android:supportsRtl">true</item>

    </style>

    <style name="button" parent="Base.Widget.AppCompat.Button">
        <item name="android:background">@color/primary_dark</item>
    </style>




    <style name="TextOfRecyclerView" parent="TextAppearance.AppCompat.Widget.TextView.SpinnerItem">
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:fontFamily">@font/fonts</item>
    </style>


    <style name="TextViewBasic" parent="TextAppearance.AppCompat.Widget.TextView.SpinnerItem">
        <item name="android:textSize">18dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/fonts</item>
        <item name="android:textColor">@color/primary_dark</item>
    </style>

    <style name="TopTextView" parent="TextAppearance.AppCompat.Widget.TextView.SpinnerItem">
        <item name="android:textSize">18dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/fonts</item>
        <item name="android:textColor">@color/primary_text</item>
    </style>
    <style name="BaseSpinner" parent="Base.Widget.AppCompat.Spinner">
        <item name="android:color">@color/primary_text</item>
        <item name="android:background">@drawable/circle</item>
        <item name="android:layout_marginTop">5dp</item>


    </style>

</resources>
