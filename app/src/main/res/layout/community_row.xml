<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.v7.widget.CardView
        android:id="@+id/community_row_cv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="7dp"
        android:elevation="12dp"
        app:cardCornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/community_row_tv_name"
                style="@style/MangerVerifyUserTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_marginRight="10dp"
                android:text="@string/first_name"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/community_row_tv_name_content"
                style="@style/MangerVerifyUserTextViewContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="@id/community_row_tv_name"
                app:layout_constraintHorizontal_bias="0.99"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/community_row_tv_name"
                app:layout_constraintTop_toTopOf="@id/community_row_tv_name" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/community_row_tv_family_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="@string/last_name"
                app:layout_constraintRight_toRightOf="@id/community_row_tv_name"
                app:layout_constraintTop_toBottomOf="@id/community_row_tv_name"
                style="@style/MangerVerifyUserTextView"/>

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/community_row_tv_family_name_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintHorizontal_bias="0.99"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/community_row_tv_family_name"
                app:layout_constraintTop_toTopOf="@id/community_row_tv_family_name"
                style="@style/MangerVerifyUserTextViewContent"/>
            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/community_row_tv_gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/gender"
                app:layout_constraintHorizontal_bias="0.99"
                android:layout_marginTop="3dp"
                app:layout_constraintRight_toRightOf="@id/community_row_tv_family_name"
                app:layout_constraintTop_toBottomOf="@id/community_row_tv_family_name"
                style="@style/MangerVerifyUserTextView"/>

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/community_row_tv_gender_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintHorizontal_bias="0.99"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/community_row_tv_gender"
                app:layout_constraintTop_toTopOf="@id/community_row_tv_gender"
                app:layout_constraintBottom_toBottomOf="@id/community_row_tv_gender"
                style="@style/MangerVerifyUserTextViewContent"/>

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/community_row_tv_degree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/degree_of_education"
                app:layout_constraintHorizontal_bias="0.99"
                android:layout_marginTop="3dp"
                app:layout_constraintRight_toRightOf="@id/community_row_tv_gender"
                app:layout_constraintTop_toBottomOf="@id/community_row_tv_gender"
                style="@style/MangerVerifyUserTextView"/>

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/community_row_tv_degree_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintHorizontal_bias="0.99"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/community_row_tv_degree"
                app:layout_constraintTop_toTopOf="@id/community_row_tv_degree"
                app:layout_constraintBottom_toBottomOf="@id/community_row_tv_degree"
                style="@style/MangerVerifyUserTextViewContent"/>

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/community_row_tv_course"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/course"
                app:layout_constraintHorizontal_bias="0.99"
                android:layout_marginTop="3dp"
                app:layout_constraintRight_toRightOf="@id/community_row_tv_degree"
                app:layout_constraintTop_toBottomOf="@id/community_row_tv_degree"
                style="@style/MangerVerifyUserTextView"/>

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/community_row_tv_course_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintHorizontal_bias="0.98"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="@+id/community_row_tv_course"
                app:layout_constraintRight_toLeftOf="@+id/community_row_tv_course"
                app:layout_constraintBottom_toBottomOf="@id/community_row_tv_course"
                style="@style/MangerVerifyUserTextViewContent"/>
            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/community_row_tv_post"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/post"
                android:layout_marginTop="3dp"
                app:layout_constraintHorizontal_bias="0.99"
                app:layout_constraintRight_toRightOf="@id/community_row_tv_course"
                app:layout_constraintTop_toBottomOf="@id/community_row_tv_course"
                style="@style/MangerVerifyUserTextView"/>

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/community_row_tv_post_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintHorizontal_bias="0.98"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="@+id/community_row_tv_post"
                app:layout_constraintRight_toLeftOf="@+id/community_row_tv_post"
                app:layout_constraintBottom_toBottomOf="@id/community_row_tv_post"
                style="@style/MangerVerifyUserTextViewContent"/>
            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/community_row_tv_phone_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/phone_number"
                app:layout_constraintHorizontal_bias="0.99"
                android:layout_marginTop="3dp"
                app:layout_constraintRight_toRightOf="@id/community_row_tv_post"
                app:layout_constraintTop_toBottomOf="@id/community_row_tv_post"
                style="@style/MangerVerifyUserTextView"/>

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/community_row_tv_phone_no_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintHorizontal_bias="0.98"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="@+id/community_row_tv_phone_no"
                app:layout_constraintRight_toLeftOf="@+id/community_row_tv_phone_no"
                app:layout_constraintBottom_toBottomOf="@id/community_row_tv_phone_no"
                style="@style/MangerVerifyUserTextViewContent"/>
            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/community_row_tv_tel_work"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tel_work"
                android:layout_marginTop="3dp"
                app:layout_constraintHorizontal_bias="0.99"
                app:layout_constraintRight_toRightOf="@id/community_row_tv_phone_no"
                app:layout_constraintTop_toBottomOf="@id/community_row_tv_phone_no"
                style="@style/MangerVerifyUserTextView"/>

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/community_row_tv_tel_work_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintHorizontal_bias="0.98"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="@+id/community_row_tv_tel_work"
                app:layout_constraintRight_toLeftOf="@+id/community_row_tv_tel_work"
                app:layout_constraintBottom_toBottomOf="@+id/community_row_tv_tel_work"
                style="@style/MangerVerifyUserTextViewContent"/>

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/community_row_tv_address_work"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/address_work"
                app:layout_constraintHorizontal_bias="0.99"
                android:layout_marginTop="3dp"
                app:layout_constraintRight_toRightOf="@id/community_row_tv_tel_work"
                app:layout_constraintTop_toBottomOf="@id/community_row_tv_tel_work"
                style="@style/MangerVerifyUserTextView"/>

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/community_row_tv_address_work_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintHorizontal_bias="0.98"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="@+id/community_row_tv_address_work"
                app:layout_constraintRight_toLeftOf="@+id/community_row_tv_address_work"
                app:layout_constraintBottom_toBottomOf="@id/community_row_tv_address_work"
                style="@style/MangerVerifyUserTextViewContent"/>
            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/community_row_imgv_edit"
                android:layout_width="54dp"
                android:layout_height="54dp"
                app:srcCompat="@drawable/edit"
                android:layout_marginTop="3dp"
                app:layout_constraintTop_toBottomOf="@id/community_row_tv_address_work_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>


        </android.support.constraint.ConstraintLayout>


    </android.support.v7.widget.CardView>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/primary_light"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="7dp"
        app:layout_constraintTop_toBottomOf="@id/community_row_cv"
        />

</android.support.constraint.ConstraintLayout>