<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_text"
    tools:context=".SendMessageActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/send_msg_tv_send_to"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:text="@string/send_to"
                android:textSize="18sp"
                android:gravity="center"
                app:layout_constraintBottom_toBottomOf="@id/send_msg_spn_send_to"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/send_msg_spn_send_to"
                />

            <android.support.v7.widget.AppCompatSpinner
                android:id="@+id/send_msg_spn_send_to"
                style="@style/BaseSpinner"
                android:layout_width="0dp"
                android:layout_height="50dp"

                android:spinnerMode="dialog"
                app:layout_constraintTop_toTopOf="@id/send_msg_tv_send_to"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/send_msg_tv_send_to"
                />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/send_msg_tv_visibility"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/visibility"
                android:textSize="18sp"
                android:gravity="center"
                app:layout_constraintBottom_toBottomOf="@id/send_msg_spn_visibility"
                app:layout_constraintLeft_toRightOf="@id/send_msg_spn_visibility"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/send_msg_spn_visibility" />

            <android.support.v7.widget.AppCompatSpinner
                android:id="@+id/send_msg_spn_visibility"
                style="@style/BaseSpinner"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:spinnerMode="dialog"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="@id/send_msg_spn_send_to"
                app:layout_constraintTop_toBottomOf="@id/send_msg_spn_send_to" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/send_msg_tv_category"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:text="@string/category"
                android:textSize="18sp"
                android:gravity="center"
                app:layout_constraintBottom_toBottomOf="@id/send_msg_spn_category"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/send_msg_spn_category" />


            <android.support.v7.widget.AppCompatSpinner
                android:id="@+id/send_msg_spn_category"
                style="@style/BaseSpinner"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:spinnerMode="dialog"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="@id/send_msg_spn_visibility"
                app:layout_constraintTop_toBottomOf="@id/send_msg_spn_visibility" />

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/send_msg_et_send_to1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/send_msg_spn_category"
                app:layout_constraintBottom_toTopOf="@id/send_msg_et_text"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>


            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/send_msg_et_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/rec"
                android:backgroundTint="@color/primary_light"
                android:minLines="1"
                android:lines="10"
                android:padding="8dp"
                android:hint="@string/request_text"
                android:textColor="@color/primary_text"
                android:textColorHint="@color/primary_text"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/send_msg_et_send_to1" />

            <com.dd.processbutton.FlatButton
                style="@style/FlatButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:text="@string/send"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/send_msg_et_text" />

        </android.support.constraint.ConstraintLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>