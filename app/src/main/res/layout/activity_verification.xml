<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_light"

    tools:context=".VerificationActivity">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/im"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="30dp"
        app:layout_constraintBottom_toTopOf="@+id/verification_et_verfication_code"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/smsdark" />


    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/verification_et_verfication_code"
        android:layout_width="297dp"
        android:layout_height="35dp"
        android:layout_marginTop="48dp"
        android:background="@drawable/circle"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@color/primary"
        android:textStyle="bold"
        android:hint="@string/verification_code"
        android:textColorHint="@color/primary_light"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/im" />

    <com.dd.processbutton.iml.ActionProcessButton
        android:id="@+id/verification_btn_submit"
        style="@style/ActionProcessButton"
        android:layout_width="297dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="264dp"
        android:text="@string/submit"
        android:textColor="@color/primary_text"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/verification_et_verfication_code" />
</android.support.constraint.ConstraintLayout>