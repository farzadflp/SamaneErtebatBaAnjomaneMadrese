<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/primary_text">

    <android.support.v7.widget.CardView
        android:id="@+id/mvu_cv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="7dp"
        android:elevation="12dp"
        app:cardCornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/community_row_tv_name"
                style="@style/MangerVerifyUserTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:layout_marginRight="10dp"
                android:text="@string/first_name"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/community_row_tv_name_content"
                style="@style/MangerVerifyUserTextViewContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                app:layout_constraintBottom_toBottomOf="@id/community_row_tv_name"
                app:layout_constraintHorizontal_bias="0.99"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/community_row_tv_name"
                app:layout_constraintTop_toTopOf="@id/community_row_tv_name" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/community_row_tv_family_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:text="@string/last_name"
                app:layout_constraintRight_toRightOf="@id/community_row_tv_name"
                app:layout_constraintTop_toBottomOf="@id/community_row_tv_name"
                style="@style/MangerVerifyUserTextView"/>

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/community_row_tv_family_name_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintHorizontal_bias="0.99"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/community_row_tv_family_name"
                app:layout_constraintTop_toTopOf="@id/community_row_tv_family_name"
                style="@style/MangerVerifyUserTextViewContent"/>
            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/community_row_tv_gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/gender"
                app:layout_constraintHorizontal_bias="0.99"
                app:layout_constraintRight_toRightOf="@id/community_row_tv_family_name"
                app:layout_constraintTop_toBottomOf="@id/community_row_tv_family_name"
                style="@style/MangerVerifyUserTextView"/>

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/community_row_tv_gender_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintHorizontal_bias="0.99"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/community_row_tv_gender"
                app:layout_constraintTop_toTopOf="@id/community_row_tv_gender"
                app:layout_constraintBottom_toBottomOf="@id/community_row_tv_gender"
                style="@style/MangerVerifyUserTextViewContent"/>

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/community_row_tv_degree_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/name_Of_child"
                app:layout_constraintHorizontal_bias="0.99"
                app:layout_constraintRight_toRightOf="@id/community_row_tv_gender"
                app:layout_constraintTop_toBottomOf="@id/community_row_tv_gender"
                style="@style/MangerVerifyUserTextView"/>

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/community_row_tv_degree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintHorizontal_bias="0.99"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/community_row_tv_degree_content"
                app:layout_constraintTop_toTopOf="@id/community_row_tv_degree_content"
                app:layout_constraintBottom_toBottomOf="@id/community_row_tv_degree_content"
                style="@style/MangerVerifyUserTextViewContent"/>

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/community_row_tv_course_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/st_no_child"
                app:layout_constraintHorizontal_bias="0.99"
                app:layout_constraintRight_toRightOf="@id/community_row_tv_degree_content"
                app:layout_constraintTop_toBottomOf="@id/community_row_tv_degree_content"
                style="@style/MangerVerifyUserTextView"/>

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/community_row_tv_course"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintHorizontal_bias="0.98"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="@+id/community_row_tv_course_content"
                app:layout_constraintRight_toLeftOf="@+id/community_row_tv_course_content"
                app:layout_constraintBottom_toBottomOf="@id/community_row_tv_course_content"
                style="@style/MangerVerifyUserTextViewContent"/>
            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/mvu_phone_no_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/phone_number"
                app:layout_constraintHorizontal_bias="0.99"
                app:layout_constraintRight_toRightOf="@id/community_row_tv_course_content"
                app:layout_constraintTop_toBottomOf="@id/community_row_tv_course_content"
                style="@style/MangerVerifyUserTextView"/>

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/mvu_phone_no_content_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintHorizontal_bias="0.98"
                app:layout_constraintTop_toTopOf="@id/mvu_phone_no_tv"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/mvu_phone_no_tv"
                app:layout_constraintBottom_toBottomOf="@id/mvu_phone_no_tv"
                style="@style/MangerVerifyUserTextViewContent"/>

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/mvu_verify_imgv"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/circle_cloud"
                android:backgroundTint="@color/accent"
                android:padding="10dp"
                android:scaleType="fitXY"
                android:src="@drawable/check"
                app:layout_constraintHorizontal_bias="0.70"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/mvu_phone_no_tv"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/mvu_refuse_imgv"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:background="@drawable/circle_cloud"
                android:backgroundTint="@color/error"
                android:padding="10dp"
                android:scaleType="fitXY"
                android:src="@drawable/closewhite"
                app:layout_constraintRight_toLeftOf="@id/mvu_verify_imgv"
                app:layout_constraintTop_toTopOf="@id/mvu_verify_imgv"
                app:layout_constraintBottom_toBottomOf="@id/mvu_verify_imgv"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintHorizontal_bias="0.75"
              />


        </android.support.constraint.ConstraintLayout>


    </android.support.v7.widget.CardView>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/primary_light"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="7dp"
        app:layout_constraintTop_toBottomOf="@id/mvu_cv"
    />

</android.support.constraint.ConstraintLayout>